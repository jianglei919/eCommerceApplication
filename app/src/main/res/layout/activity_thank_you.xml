<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_image"
    android:padding="24dp">

    <!-- 感谢标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thank_you_for_your_order"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- 订单确认提示 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_order_has_been_placed_successfully"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:gravity="center"
        android:paddingBottom="32dp" />

    <!-- 返回到产品页面按钮 -->
    <Button
        android:id="@+id/backToProductsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/continue_shopping"
        android:background="@drawable/rounded_button"
        android:padding="12dp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp" />

    <!-- 查看订单按钮 -->
    <Button
        android:id="@+id/viewOrdersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/view_my_orders"
        android:background="@drawable/rounded_button"
        android:padding="12dp"
        android:textColor="@color/white" />
</LinearLayout>